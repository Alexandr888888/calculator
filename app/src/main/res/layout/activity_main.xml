<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom|end"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right|bottom"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="150dp">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buAC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:gravity="center"
            android:onClick="acClick"
            android:text="AC"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/buPlusMinus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="+/-" />

        <Button
            android:id="@+id/buPercent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:text="%" />

        <Button
            android:id="@+id/buDivide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="operation"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
                android:id="@+id/bu7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bg"
                android:onClick="clickNumber"

                android:text="7" />

        <Button
            android:id="@+id/bu8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="8" />

        <Button
            android:id="@+id/bu9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="9" />

        <Button
                android:id="@+id/buMultiply"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bg"
                android:onClick="operation"
                android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"

            android:text="4" />

        <Button
            android:id="@+id/bu5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="5" />

        <Button
            android:id="@+id/bu6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="6" />

        <Button
                android:id="@+id/buMinus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bg"
                android:onClick="operation"
                android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"

            android:text="1" />

        <Button
                android:id="@+id/bu2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bg"
                android:onClick="clickNumber"
                android:text="2" />

        <Button
            android:id="@+id/bu3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="3" />

        <Button
            android:id="@+id/buPlus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg"
            android:onClick="operation"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="221dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/bg"
            android:onClick="clickNumber"
            android:text="0" />

        <Button
                android:id="@+id/buDot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:backgroundTint="@color/bg"
                android:onClick="clickNumber"
                android:text="." />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:backgroundTint="@color/bg"
            android:onClick="clickEqual"
            android:text="=" />
    </LinearLayout>

</LinearLayout>

